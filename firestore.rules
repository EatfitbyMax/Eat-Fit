rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permettre la lecture et écriture pour les utilisateurs authentifiés
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Permettre la lecture des collections Admin et Clients pour les utilisateurs authentifiés
    match /Admin/{document} {
      allow read, write: if request.auth != null;
    }

    match /Clients/{document} {
      allow read, write: if request.auth != null;
    }

    // Règles par défaut plus permissives pour le développement
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}