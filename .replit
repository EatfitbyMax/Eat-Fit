entrypoint = "README.md"
modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 8081
externalPort = 80

[[ports]]
localPort = 8082
externalPort = 3000

[[ports]]
localPort = 8083
externalPort = 3001

[[ports]]
localPort = 8084
externalPort = 3002

[[ports]]
localPort = 8085
externalPort = 3003

[[ports]]
localPort = 8086
externalPort = 4200

[workflows]
runButton = "Expo Dev"

[[workflows.workflow]]
name = "Expo Dev Clean"
author = 42598128
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "rm -rf node_modules/.cache"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "rm -rf .expo"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "EXPO_PACKAGER_PROXY_URL=https://$REPLIT_DEV_DOMAIN REACT_NATIVE_PACKAGER_HOSTNAME=$REPLIT_DEV_DOMAIN npx expo start --clear"

[[workflows.workflow]]
name = "Expo Dev"
author = 42598128
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "rm -rf node_modules/.cache"

[[workflows.workflow.tasks]]
