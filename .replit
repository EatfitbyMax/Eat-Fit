entrypoint = "README.md"
modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 8081
externalPort = 80

[[ports]]
localPort = 8082
externalPort = 3000

[[ports]]
localPort = 8083
externalPort = 3001

[[ports]]
localPort = 8084
externalPort = 3002

[[ports]]
localPort = 8085
externalPort = 3003

[workflows]
runButton = "Expo + VPS"

[[workflows.workflow]]
name = "Start External VPS"
author = 42598128
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd server && npm install && node server.js"

[[workflows.workflow]]
name = "Dev Server"
author = 42598128
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx expo start --port 8081"

[[workflows.workflow]]
name = "Local Server"
author = 42598128
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd server && npm install && node server.js"

[[workflows.workflow]]
name = "Expo avec VPS External"
author = 42598128
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx expo start --port 8081 --tunnel"

[[workflows.workflow]]
